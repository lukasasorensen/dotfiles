commit () {
 branch="$(git branch | grep \* | cut -d ' ' -f2)"
 IFS='-' read -rA arrBranch <<< "$branch"
 story="$arrBranch[1]-$arrBranch[2]"
 branchPrefix=${arrBranch[1]}""
 commitMessage="$story: $1"

 if [ "$branchPrefix" != "DDP" ]; then
   commitMessage="$1"
   read -q "REPLY?Branch name does not start with 'DDP'. would you like still include prefix in commit? [y/n] "
   echo
   if [[ $REPLY =~ ^[Yy]$ ]];
   then
    echo "Enter in a prefix:"
    read ANSWER
	commitMessage="$ANSWER: $1"
   fi
 fi
 
 git add .
 git commit -m "$commitMessage"
}

pullindev () {
 git checkout develop
 git fetch
 git pull
 git checkout -
 git merge develop
}

pullinstaging () {
 git checkout staging
 git fetch
 git pull
 git checkout - 
 git merge staging
}

pullinmaster() {
 git checkout master
 git fetch
 git pull
 git checkout - 
 git merge master
}

gitreset() {
 git add .
 git reset HEAD --hard
}

function https-server() {
  http-server --ssl --cert ~/.localhost-ssl/localhost.crt --key ~/.localhost-ssl/localhost.key
}

ql() {
  qlmanage -p "$1" &>/dev/null
}



